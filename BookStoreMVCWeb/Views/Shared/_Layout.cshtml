<style>
	/* Basic styling for the navigation */
	#navbar .menu-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
	}

	#navbar .menu-item {
		position: relative;
		margin-right: 20px;
	}

		#navbar .menu-item a {
			text-decoration: none;
			padding: 10px 15px;
			color: #333;
			display: block;
		}

		#navbar .menu-item:hover > a {
			color: #ff6600; /* Change color on hover */
		}

	/* Styling for submenu */
	#navbar .submenu {
		list-style: none;
		padding: 0;
		margin: 0;
		position: absolute;
		top: 100%;
		left: 0;
		display: none; /* Hidden by default */
		background-color: #ffffff;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

		#navbar .submenu .submenu {
			left: 100%; /* Position next level submenu to the right */
			top: 0;
		}

	#navbar .menu-item:hover > .submenu {
		display: block; /* Show submenu on hover */
	}

	#navbar .submenu li {
		width: 200px; /* Set width for submenu items */
	}

		#navbar .submenu li a {
			padding: 10px;
			color: #333;
		}

			#navbar .submenu li a:hover {
				background-color: #f5f5f5;
				color: #ff6600;
			}

	/* Styling for icons */
	#navbar .menu-item i {
		margin-right: 8px;
	}
</style>
